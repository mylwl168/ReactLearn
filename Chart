// 假设已经初始化了 jsPDF 对象，例如：
import jsPDF from "jspdf";
const doc = new jsPDF();

// 设置字体和字号
doc.setFont("helvetica", "normal");
doc.setFontSize(12);

const text = "这是带下划线的文本";
const x = 20; // 文本开始的 x 坐标
const y = 30; // 文本 baseline 的 y 坐标

// 绘制文本
doc.text(text, x, y);

// 计算文本宽度
const textWidth = doc.getTextWidth(text);

// 设置下划线粗细（可根据需要调整）
doc.setLineWidth(0.5);

// 绘制下划线（y + 1 可以调整下划线与文本间的距离）
doc.line(x, y + 1, x + textWidth, y + 1);

// 导出 PDF
doc.save("document.pdf");
