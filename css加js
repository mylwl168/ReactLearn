/* styles.css */
#a {
  display: flex;
  flex-direction: column;
  max-width: 80vw;
  max-height: 70vh;
  min-width: 300px;
  min-height: 200px;
  border: 1px solid #ccc;
  background: #f9f9f9;
}

#d {
  padding: 10px;
  background: #ddd;
  text-align: center;
}

.content {
  display: flex;
  flex: 1;
  overflow: hidden;
}

#b {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

#c {
  flex: 1;
  padding: 10px;
  overflow-y: auto;
  word-wrap: break-word;
}


// script.js
window.addEventListener('resize', adjustSize);

function adjustSize() {
  const a = document.getElementById('a');
  
  const maxWidth = Math.min(window.innerWidth * 0.8, 600);
  const maxHeight = Math.min(window.innerHeight * 0.7, 400);

  a.style.maxWidth = maxWidth + 'px';
  a.style.maxHeight = maxHeight + 'px';
  a.style.minWidth = '300px';
  a.style.minHeight = '200px';
}

adjustSize();


--------

/* a的样式 */
#a {
  display: flex;
  flex-direction: column;
  max-width: 80vw;
  max-height: 70vh;
  min-width: 300px;
  min-height: 200px;
  border: 1px solid #ccc;
  background: #f9f9f9;
}

/* d的样式 (header) */
#d {
  padding: 10px;
  background: #ddd;
  text-align: center;
}

/* 第二行的样式 */
.content {
  display: flex;
  flex: 1; /* 让第二行占据剩余空间 */
  overflow: hidden; /* 隐藏默认滚动条 */
}

/* b和c的样式 */
#b {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

#c {
  flex: 1; /* 让c占据剩余空间 */
  padding: 10px;
  overflow-y: auto; /* 只在c中显示滚动条 */
  word-wrap: break-word; /* 保证长文本自动换行 */
  display: flex;
  align-items: center; /* 默认纵向居中对齐 */
}

